                <version>${embedded-cassandra.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.nosan</groupId>
                <artifactId>embedded-cassandra-mock</artifactId>
                <version>${embedded-cassandra.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

</project>
